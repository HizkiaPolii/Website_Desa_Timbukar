```bash
# Copy file ini menjadi .env.local dan sesuaikan dengan nilai yang benar
# DO NOT COMMIT .env.local ke Git!

# ===== API Configuration =====
# Backend API URL - REQUIRED
# Untuk Development: http://localhost:5000/api
# Untuk Production/Vercel: https://api.desatimbukar.id/api
NEXT_PUBLIC_API_BASE_URL=https://api.desatimbukar.id/api

# API timeout dalam milliseconds (default: 10 detik)
NEXT_PUBLIC_API_TIMEOUT=10000

# Debug mode (set ke false untuk production)
NEXT_PUBLIC_DEBUG=false

```
